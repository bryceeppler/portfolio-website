---
import nodejs from '../images/nodejs-icon.svg';
import react from '../images/react-icon.svg';
import django from '../images/django-icon.svg';
import python from '../images/python-icon.svg';
import prisma from '../images/prisma-icon.svg';
import swift from '../images/swift-icon.svg';
import postgres from '../images/postgresql.svg';
import awsIcon from '../images/aws-icon.svg';
import docker from '../images/docker-icon-2.webp';
import express from '../images/express.svg';
import fastapi from '../images/fastapi-icon.svg';
const { technology } = Astro.props;

const iconMap = {
    "django": django,
    "nodejs": nodejs,
    "react": react,
    "python": python,
    "prisma": prisma,
    "swift": swift,
    "postgres": postgres,
    "aws": awsIcon,
    "docker": docker,
    "express": express,
    "fastapi": fastapi
}

---

<>
<!-- square container -->
<div class="flex flex-col items-center justify-center mr-1 mt-1 w-10 h-10 bg-inherit rounded-lg shadow-lg transition-all hover:bg-slate-200">
    <!-- icon -->
    <img src={iconMap[technology]} class="w-8 h-8 object-scale-down" />
    <!-- title -->
    <!-- <h3 class="mt-1 text-sm text-gray-700">{technology}</h3> -->
</div>

</>
